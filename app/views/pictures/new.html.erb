
<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<h1>Add a new picture!</h1>

		<%= form_for @picture do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div>
				<%= f.label :title, "Title" %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>
			<div>
				<%= f.label :image, "Picture" %>
				<%= f.file_field :image %>
			</div>
			<div>
				<%= f.label :caption, "Caption" %>
				<%= f.text_field :caption, class: 'form-control' %>
			</div>
			<%= f.submit "Submit Photo", class: "btn btn-danger form-submit-btn" %>
		<% end %>
	</div>
</div>