<h1>All Pictures</h1>

<h3><%= params %></h3>



<div class="row">
<!-- Button to select what type of pictures -->
	<div class="btn-group">
	  <button type="button" data-toggle="dropdown" class="btn btn-danger dropdown-toggle"> <%= params[:type].capitalize  %> <span class="caret"></span></button>
	  <ul class="dropdown-menu">
	  	<li><%= link_to "All #{params[:type] == "all" ? "&#10003;" : ""}".html_safe, "/all/#{params[:sort]}"%>
	    <li><%= link_to "Friends #{params[:type] == "friends" ? "&#10003;" : ""}".html_safe, "/friends/#{params[:sort]}"%></li>
	    <li><%= link_to "Fiends #{params[:type] == "fiends" ? "&#10003;" : ""}".html_safe, "/fiends/#{params[:sort]}"%></li>
	  </ul>
	</div>
	<!-- Button to select how to sort pictures -->
	<div class="btn-group">
    <button type="button" data-toggle="dropdown" class="btn btn-danger dropdown-toggle"> <%= params[:sort].capitalize  %> <span class="caret"></span></button>
    <ul class="dropdown-menu">
	    <li><%= link_to "Newest #{params[:sort] == "newest" ? "&#10003;" : ""}".html_safe, "/#{params[:type]}/newest"%> </li>
	    <li><%= link_to "Top #{params[:sort] == "top" ? "&#10003;" : ""}".html_safe, "/#{params[:type]}/top"%></li>
    </ul>
	</div>

</div>

<div class="row">
	
	<% @pictures.each_with_index do |picture, index| %>

		<div class="col-lg-3 col-sm-4 col-xs-6 text-center">
			<%= link_to image_tag(picture.image.url(:thumb), size: "160x160"), picture_path(picture, {type: params[:type], sort: params[:sort], index: index}) %>
		</div>

	<% end %>

</div>

<%= link_to "new_picture", new_picture_path %>