<div class="row">
	<div class="col-md-3 col-sm-12 text-center">
		<%= image_tag @user.image.url, size: "200x200", class: "img-circle"%>
		<h3><%= @user.pet_name %></h3>
	</div>
	<div class="col-md-9 col-sm-12">
		<div class="row">
			<div class="col-md-12 col-sm-12">
				<%= image_tag "Bar.png",class: "img-responsive"%>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-3 col-sm-12 text-center">
		<%= image_tag @user.image.url, size: "200x200", class: "img-circle"%>
		<h3><%= @user.pet_name %></h3>
	</div>
	<div class="col-md-9 col-sm-12">
		<div class="row">
			<div class = "col-md-2 col-sm-2 col-xs-2">
				<%= image_tag "Halo.png", class: "img-responsive"%>
			</div>
			<div class = "col-xs-8 friend-bar">
				<!-- <div class="friend-bar"> -->
					<div class="row paws-container">
						<div class="col-xs-1"></div>
						<% (0..9).each do |i| %>
							<div class="col-xs-1">
							<% if i==9 %>
								<%= image_tag "Paw.png", size: "28x28", class: "paw-image" %>
							<% end %>
							</div>
						<% end %>
						<div class="col-xs-1"></div>
					</div>
				<!-- </div> -->
				
			</div>
			<div class = "col-md-2 col-sm-2 col-xs-2">
				<%= image_tag "Devil_Horns.png", class: "img-responsive"%>
			</div>
		</div>
	</div>
</div>

<!-- <div class="container"> -->
	<ul class="nav nav-tabs nav-justified">
		<%=content_tag :li, link_to(image_tag("Halo.png", size: "20x20") + " Friend", user_path({type: "friends"})), class: @type== "friends" ? "active" : "" %>
		<%=content_tag :li, link_to(image_tag("Devil_Horns.png", size: "20x20") + " Fiend", user_path({type: "fiends"})), class: @type== "fiends" ? "active" : "" %>

	</ul>
	<div class="container-fluid pic-container">
		<% @pictures.each_with_index do |picture, index| %>
			<div class="col-md-4 col-sm-6 text-center">
				<%= link_to image_tag(picture.image.url(:thumb), size: "160x160", class: "pic-thumb"), picture_path(picture, {type: @type, sort: "newest", index: index, user_id: @user.id.to_s}) %>
			</div>
		<% end %>
		
	</div>
