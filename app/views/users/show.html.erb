<h1><%= @user.username %></h1>
<p>This is pet: <%= @user.pet_name %></p>

<%= link_to "edit", edit_user_path(@user) %>
<%= link_to "delete", :user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>

<h2> Users Pictures </h2>
<%= @user.pictures.inspect %>
<ul>
	<% @user.pictures.each do |pic| %>
		<li>
			<%= link_to image_tag(pic.url, size: "100x100"), picture_path(pic) %>
		</li>
	<% end %>
</ul>