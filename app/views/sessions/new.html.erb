<% provide(:title, "Log in") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Log in</h1>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-danger form-submit-btn" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path, class: "red-link" %></p>
  </div>
</div>